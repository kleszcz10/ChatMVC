@model ChatMVC.Models.Message

@using (Html.BeginForm("SendMessage", "Account", FormMethod.Post))
{
    <hr />

            <div class="row">
                <div class="col-lg-10 col-sm-10 col-xs-12">
                    @Html.EditorFor(model => model.MessageText, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                </div>
                <div class="col-lg-2 col-sm-2 col-xs-12">
                    <input type="submit" value="Wyślij" class="btn btn-default" style="width: 100%; max-width: 100%" />
                </div>
            </div>

        @Html.HiddenFor(model => model.ReceiverUserId, new { Value = ViewBag.ReciverID })
        
}
