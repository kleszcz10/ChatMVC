                @Html.EditorFor(model => model.RecipientrUserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RecipientrUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.HiddenFor(model => model.RecipientrUserId,new { value = ViewBag.RecipientrUserId })
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

